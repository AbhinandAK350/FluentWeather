<Page
    x:Class="FluidWeather.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluidWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:FluidWeather.Helpers"
    xmlns:views="using:FluidWeather.Views"
    xmlns:models="using:FluidWeather.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>
        <Style x:Key="ControlFullStretchStyle" TargetType="ListViewItem"
               BasedOn="{StaticResource DefaultListViewItemStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />

        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>


        <ParallaxView

            Grid.RowSpan="10"

            Source="{x:Bind mainScroll}" VerticalShift="50">

            <!-- Background element -->
            <Image x:Name="BackgroundImage" Source="/Assets/bgs/1.jpg"
                   Stretch="UniformToFill" />
        </ParallaxView>


        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid x:Name="AppTitleBar" Background="Transparent">
                <!-- Width of the padding columns is set in LayoutMetricsChanged handler. -->
                <!-- Using padding columns instead of Margin ensures that the background
             paints the area under the caption control buttons (for transparent buttons). -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                    <ColumnDefinition />
                    <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
                </Grid.ColumnDefinitions>


                <Image Source="/Assets/Square44x44Logo.png"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       Width="24" Height="24"
                       Margin="16,0,0,0" />
                <TextBlock x:Name="AppTitleTextBlock"
                           Text="test"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Margin="48,0,0,0" />
            </Grid>


        </Grid>


        <!--     <muxc:NavigationView Grid.Row="1"
                             IsTitleBarAutoPaddingEnabled="False"
                             IsBackButtonVisible="Collapsed"
                             IsBackEnabled="{x:Bind NavigationViewViewModel.IsBackEnabled, Mode=OneWay}"
                             SelectedItem="{x:Bind NavigationViewViewModel.Selected, Mode=OneWay}"
                             x:Name="navigationView"
                             PaneDisplayMode="Left"
                             IsPaneToggleButtonVisible="False">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="Dashboard" helpers:NavHelper.NavigateTo="views:DashWet">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe80f;" FontFamily="{StaticResource FluentIcons}" />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>

                <muxc:NavigationViewItem Content="Agenda" helpers:NavHelper.NavigateTo="views:DashWet">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe787;" FontFamily="{StaticResource FluentIcons}" />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>

                <muxc:NavigationViewItem Content="Bacheca" helpers:NavHelper.NavigateTo="views:DashWet">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe718;" FontFamily="{StaticResource FluentIcons}" />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>

            <Frame x:Name="contentFrame" IsTabStop="True" />

        </muxc:NavigationView> -->


        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <RelativePanel Grid.Row="1"
                           Margin="18"
                           VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                <AutoSuggestBox
                    TextChanged="AutoSuggestBox_TextChanged"
                    SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                    Width="400" AutomationProperties.Name="Basic AutoSuggestBox"
                    TextMemberPath="address"
                    PlaceholderText="Search a place..."
                    ItemContainerStyle="{StaticResource ControlFullStretchStyle}">


                    <AutoSuggestBox.ItemTemplate>
                        <DataTemplate x:DataType="models:SearchedLocation">
                            <RelativePanel Margin="2,0,0,0">


                                <FontIcon x:Name="icon"
                                          FontSize="24"
                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                          FontFamily="{StaticResource FluentIcons}" Glyph="&#xE707;" />


                                <TextBlock x:Name="text1" Text="{x:Bind address}"
                                           Margin="8,0,0,0"
                                           RelativePanel.RightOf="icon" />
                            </RelativePanel>
                        </DataTemplate>
                    </AutoSuggestBox.ItemTemplate>

                </AutoSuggestBox>

            </RelativePanel>


            <ScrollViewer Grid.Row="2"
                          x:Name="mainScroll"
                          HorizontalScrollMode="Disabled"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

                <Grid Padding="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <RelativePanel Grid.Row="0"
                                   Margin="8,0,0,16">
                        <!-- icon of place with text of the place -->
                        <FontIcon x:Name="placeIcon"
                                  FontSize="24"
                                  RelativePanel.AlignVerticalCenterWithPanel="True"
                                  FontFamily="{StaticResource FluentIcons}" Glyph="&#xE707;" />

                        <TextBlock x:Name="PlaceText" Text="place"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="8,0,0,0"
                                   RelativePanel.RightOf="placeIcon" />


                    </RelativePanel>

                    <RelativePanel
                        Grid.Row="1">

                        <Image x:Name="mainIcon"
                               Width="75"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Stretch="Uniform">
                            <Image.Source>
                                <SvgImageSource />
                            </Image.Source>
                        </Image>

                        <TextBlock x:Name="CurrentTempText" Text="temperature"

                                   Style="{StaticResource DisplayTextBlockStyle}"
                                   Margin="8,0,0,0"

                                   RelativePanel.RightOf="mainIcon" />

                        <TextBlock x:Name="MainPhraseText" Text="phrase"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="16,0,0,0"
                                   RelativePanel.Above="FeelsLikeText"
                                   RelativePanel.AlignLeftWith="FeelsLikeText" />


                        <TextBlock x:Name="FeelsLikeText" Text="feelslike"

                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="16,0,0,16"
                                   Opacity="{ThemeResource TextControlBackgroundRestOpacity}"
                                   RelativePanel.AlignBottomWithPanel="True"
                                   RelativePanel.RightOf="CurrentTempText" />
                    </RelativePanel>


                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal">

                        <RelativePanel x:Name="WindPanel"
                                       Margin="4"
                                       CornerRadius="6"
                                       Padding="8"
                                       BorderThickness="0"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <!-- textblock with BodyTextBlockStyle -->
                            <TextBlock x:Name="wtext" Text="Wind"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,0,0,0"
                                       Opacity="{ThemeResource TextControlBackgroundRestOpacity}" />

                            <TextBlock x:Name="WindText"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       Text="wind"
                                       Margin="0,0,0,0"
                                       RelativePanel.Below="wtext" />

                        </RelativePanel>


                        <!-- pressure panel -->
                        <RelativePanel x:Name="PressurePanel"
                                       Margin="4"
                                       CornerRadius="6"
                                       Padding="8"
                                       BorderThickness="0"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <!-- textblock with BodyTextBlockStyle -->
                            <TextBlock x:Name="ptext" Text="Pressure"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,0,0,0"
                                       Opacity="{ThemeResource TextControlBackgroundRestOpacity}" />

                            <TextBlock x:Name="PressureText" Text="pressure"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       Margin="0,0,0,0"
                                       RelativePanel.Below="ptext" />


                        </RelativePanel>


                        <RelativePanel x:Name="HumidityPanel"
                                       Margin="4"
                                       CornerRadius="6"
                                       Padding="8"
                                       BorderThickness="0"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <!-- textblock with BodyTextBlockStyle -->
                            <TextBlock x:Name="htext" Text="Humidity"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,0,0,0"
                                       Opacity="{ThemeResource TextControlBackgroundRestOpacity}" />

                            <TextBlock x:Name="HumidityText" Text="humid"
                                       Margin="0,0,0,0"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       RelativePanel.Below="htext" />
                        </RelativePanel>


                        <RelativePanel x:Name="VisivilityPanel"
                                       Margin="4"
                                       CornerRadius="6"
                                       Padding="8"
                                       BorderThickness="0"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <!-- textblock with BodyTextBlockStyle -->
                            <TextBlock x:Name="vtext" Text="Visivility"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Opacity="{ThemeResource TextControlBackgroundRestOpacity}" />

                            <TextBlock x:Name="VisibilityText" Text="humid"
                                       Margin="0,0,0,0"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       RelativePanel.Below="vtext" />
                        </RelativePanel>


                        <RelativePanel x:Name="DewPanel"
                                       Margin="4"
                                       CornerRadius="6"
                                       Padding="8"
                                       BorderThickness="0"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <!-- textblock with BodyTextBlockStyle -->
                            <TextBlock x:Name="dewtext" Text="Dew point"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,0,0,0"
                                       Opacity="{ThemeResource TextControlBackgroundRestOpacity}" />

                            <TextBlock x:Name="DewPointText" Text="humid"
                                       Margin="0,0,0,0"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       RelativePanel.Below="dewtext" />
                        </RelativePanel>


                        <RelativePanel x:Name="PollenPanel"
                                       Margin="4"
                                       CornerRadius="6"
                                       Padding="8"
                                       BorderThickness="0"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <!-- textblock with BodyTextBlockStyle -->
                            <TextBlock x:Name="polltext" Text="Pollen index"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,0,0,0"
                                       Opacity="{ThemeResource TextControlBackgroundRestOpacity}" />

                            <TextBlock x:Name="PollenText" Text="humid"
                                       Margin="0,0,0,0"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       RelativePanel.Below="polltext" />

                        </RelativePanel>


                        <RelativePanel x:Name="UltravPanel"
                                       Margin="4"
                                       CornerRadius="6"
                                       Padding="8"
                                       BorderThickness="0"
                                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <!-- textblock with BodyTextBlockStyle -->
                            <TextBlock x:Name="uvtext" Text="UV Index"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,0,0,0"
                                       Opacity="{ThemeResource TextControlBackgroundRestOpacity}" />

                            <TextBlock x:Name="UVIndexText" Text="humid"
                                       Margin="0,0,0,0"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       RelativePanel.Below="uvtext" />
                        </RelativePanel>


                    </StackPanel>


                </Grid>


            </ScrollViewer>


        </Grid>


    </Grid>


</Page>
