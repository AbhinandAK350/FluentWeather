        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <RelativePanel Grid.Row="1"
                           Margin="18"
                           VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                <AutoSuggestBox
                    x:Name="AutoSuggestBoxMain"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    TextChanged="AutoSuggestBox_TextChanged"
                    SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                    Width="400" AutomationProperties.Name="Basic AutoSuggestBox"
                    TextMemberPath="address"
                    PlaceholderText="Search a place..."
                    ItemContainerStyle="{StaticResource ControlFullStretchStyle}">


                    <AutoSuggestBox.ItemTemplate>
                        <DataTemplate x:DataType="models:SearchedLocation">
                            <RelativePanel Margin="2,0,0,0">


                                <FontIcon x:Name="icon"
                                          FontSize="24"
                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                          FontFamily="{StaticResource FluentIcons}" Glyph="&#xE707;" />


                                <TextBlock x:Name="text1" Text="{x:Bind address}"
                                           Margin="8,0,0,0"
                                           RelativePanel.RightOf="icon" />
                            </RelativePanel>
                        </DataTemplate>
                    </AutoSuggestBox.ItemTemplate>

                </AutoSuggestBox>

                <Button Name="ReloadButton"
                        Click="ReloadButton_OnClick"
                        RelativePanel.RightOf="AutoSuggestBoxMain"
                        Margin="8,0,0,0" >
                    <StackPanel>
                        <FontIcon Glyph="&#xE72C;" FontFamily="{StaticResource FluentIcons}" />
                    </StackPanel>
                </Button>

                <!-- progress ring -->
                <muxc:ProgressRing x:Name="DataProgressRing"
                              IsActive="{x:Bind MainPageViewModel.IsLoadingData , Mode=OneWay}"
                              RelativePanel.RightOf="ReloadButton"
                              Margin="8,0,0,0" />

            </RelativePanel>


            <ScrollViewer Grid.Row="2"
                          x:Name="mainScroll"
                          HorizontalScrollMode="Disabled"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

                <Grid Padding="40,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <RelativePanel Grid.Row="0"
                                   Margin="8,0,0,16">
                        <!-- icon of place with text of the place -->
                        <FontIcon x:Name="placeIcon"
                                  FontSize="24"
                                  RelativePanel.AlignVerticalCenterWithPanel="True"
                                  FontFamily="{StaticResource FluentIcons}" Glyph="&#xE707;" />

                        <TextBlock x:Name="PlaceText" Text="place"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="8,0,0,0"
                                   RelativePanel.RightOf="placeIcon" />


                    </RelativePanel>

                    <RelativePanel
                        Grid.Row="1">

                        <Image x:Name="mainIcon"
                               Width="75"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Stretch="Uniform">
                            <Image.Source>
                                <SvgImageSource />
                            </Image.Source>
                        </Image>

                        <TextBlock x:Name="CurrentTempText" Text="temperature"

                                   Style="{StaticResource DisplayTextBlockStyle}"
                                   Margin="8,0,0,0"

                                   RelativePanel.RightOf="mainIcon" />

                        <TextBlock x:Name="MainPhraseText" Text="phrase"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="16,0,0,0"
                                   RelativePanel.Above="FeelsLikeText"
                                   RelativePanel.AlignLeftWith="FeelsLikeText" />


                        <TextBlock x:Name="FeelsLikeText" Text="feelslike"

                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="16,0,0,16"
                                   Opacity="{ThemeResource TextControlBackgroundRestOpacity}"
                                   RelativePanel.AlignBottomWithPanel="True"
                                   RelativePanel.RightOf="CurrentTempText" />
                    </RelativePanel>


                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0,16,0,0">

                        <controls:DetailChipControl
                            x:Name="WindPanel"
                            Title="Wind"
                            >
                        </controls:DetailChipControl>


                        <!-- pressure panel -->
                        <controls:DetailChipControl
                            x:Name="PressurePanel"
                            Title="Pressure"
                            >
                        </controls:DetailChipControl>



                        <!-- humidity panel -->
                        <controls:DetailChipControl
                            x:Name="HumidityPanel"
                            Title="Humidity"
                            >
                        </controls:DetailChipControl>



                        <!-- visibility panel -->
                        <controls:DetailChipControl
                            x:Name="VisibilityPanel"
                            Title="Visibility"
                            >
                        </controls:DetailChipControl>



                        <!-- dew point panel -->
                        <controls:DetailChipControl
                            x:Name="DewPointPanel"
                            Title="Dew Point"
                            >
                        </controls:DetailChipControl>



                        <!-- pollen panel -->
                        <controls:DetailChipControl
                            x:Name="PollenPanel"
                            Title="Pollen"
                            >
                        </controls:DetailChipControl>



                        <!-- uv index panel -->
                        <controls:DetailChipControl
                            x:Name="UVIndexPanel"
                            Title="UV Index"
                            >
                        </controls:DetailChipControl>


                    </StackPanel>

                    <Grid Grid.Row="3"
                          Margin="0,32,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ForecastText"
                                   Grid.Row="0"
                                   Text="Detailed forecast"
                                   Style="{StaticResource SubtitleTextBlockStyle}"

                                   Margin="0,0,0,16"/>

                        <ScrollViewer Grid.Row="1"
                            VerticalScrollMode="Disabled"
                            VerticalScrollBarVisibility="Disabled"
                            HorizontalScrollBarVisibility="Hidden">

                            <muxc:ItemsRepeater
                                x:Name="repeaterDays">

                                <muxc:ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="adapters:DayButtonAdapter">
                                        <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Width="135"
                                                Height="70"
                                                Click="DayButtonClick">
                                            <Button.Content>
                                                <RelativePanel HorizontalAlignment="Stretch"
                                                               VerticalAlignment="Stretch">

                                                    <Image x:Name="mainIcon"
                                                           Width="28"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           Stretch="Uniform"
                                                           RelativePanel.AlignTopWithPanel="True"
                                                           RelativePanel.AlignLeftWithPanel="True"
                                                           Source="{x:Bind svgImageIcon}">
                                                    </Image>

                                                    <TextBlock Text="{x:Bind ShortEventName }"
                                                               RelativePanel.AlignTopWithPanel="True"
                                                               RelativePanel.AlignRightWithPanel="True" />

                                                    <TextBlock
                                                        Text="{x:Bind Temperature }"
                                                        RelativePanel.AlignBottomWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        ></TextBlock>

                                                    <Image x:Name="precipIcon"
                                                           Width="16"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           Stretch="Uniform"
                                                           RelativePanel.AlignBottomWithPanel="True"
                                                           RelativePanel.LeftOf="precipChanceText"
                                                           Margin="0,0,4,0"
                                                           Source="{x:Bind svgPrecipIcon}">
                                                        
                                                    </Image>

                                                    <TextBlock
                                                        x:Name="precipChanceText"
                                                        Text="{x:Bind PrecipitationChance}"
                                                        RelativePanel.AlignBottomWithPanel="True"
                                                        RelativePanel.AlignRightWithPanel="True"
                                                        ></TextBlock>
                                                </RelativePanel>
                                            </Button.Content>

                                        </Button>
                                    </DataTemplate>
                                </muxc:ItemsRepeater.ItemTemplate>

                                <muxc:ItemsRepeater.Layout>
                                    <muxc:StackLayout Spacing="8"
                                                      Orientation="Horizontal" />
                                </muxc:ItemsRepeater.Layout>
                            </muxc:ItemsRepeater>

                        </ScrollViewer>
                    </Grid>




                    <Grid Grid.Row="4"
                          Margin="0,32,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock 
                                   Grid.Row="0"
                                   Text="Hourly"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   FontSize="20"
                                   Margin="0,0,0,16"/>







                        </Grid>




                </Grid>
            </ScrollViewer>


        </Grid>


    </Grid>


</Page>
