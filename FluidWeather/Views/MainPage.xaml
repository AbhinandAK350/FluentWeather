                                                </Image>

                                                <TextBlock x:Name="TemperatureText"
                                                           Text="{x:Bind Temperature }"
                                                           RelativePanel.Below="wetIcon"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           TextAlignment="Center"
                                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                                           FontSize="28">
                                                </TextBlock>

                                                <!-- phrase text -->
                                                <TextBlock Text="{x:Bind Phrase }"
                                                           RelativePanel.Below="TemperatureText"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           TextAlignment="Center"
                                                           Style="{StaticResource BodyTextBlockStyle}"
                                                           FontSize="12">
                                                </TextBlock>

                                                <!-- precip icon -->
                                                <Image x:Name="precipIcon"
                                                       Width="16"
                                                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                       Stretch="Uniform"
                                                       RelativePanel.Above="Rectangle2"
                                                       RelativePanel.LeftOf="precipChanceText"
                                                       Margin="0,0,4,0"
                                                       Source="{x:Bind svgPrecipIcon}" />

                                                <!-- precip chance text -->
                                                <TextBlock x:Name="precipChanceText"
                                                           Text="{x:Bind PrecipitationChance}"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           RelativePanel.Above="Rectangle2">
                                                </TextBlock>

                                                <!-- horizontal line -->
                                                <Rectangle x:Name="Rectangle2"
                                                           Fill="#7FFFFFFF"
                                                           Height="1"
                                                           RelativePanel.Above="HourText"
                                                           Width="100"
                                                           Margin="0,8,0,0" />

                                                <TextBlock x:Name="HourText"
                                                           Text="{Binding Hour}"
                                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           RelativePanel.AlignBottomWithPanel="True" />

                                            </RelativePanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </Grid>


                    </Grid>


                    <Grid Grid.Row="5"
                          Margin="0,32,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <RelativePanel Grid.Row="0">
                            <TextBlock
                                x:Name="SuggestionsText"
                                Grid.Row="0"
                                Text="Weather Insights"
                                Style="{StaticResource BodyTextBlockStyle}"
                                FontSize="20"
                                Margin="0,0,0,16" />


                        </RelativePanel>


                        <StackPanel
                            Grid.Row="1"
                            Orientation="Horizontal">

                            <controls:InsightControl x:Name="RunningInsight"></controls:InsightControl>
                            <controls:InsightControl x:Name="DrivingInsight"></controls:InsightControl>

                            <!--
                            <controls:InsightControl x:Name="PollenInsight"></controls:InsightControl>
                            -->

                            <controls:InsightControl x:Name="WateringInsight"></controls:InsightControl>

                            <controls:InsightControl x:Name="DryskinInsight"></controls:InsightControl>


                        </StackPanel>

                    </Grid>


                    <Grid Grid.Row="6"
                          Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <RelativePanel Grid.Row="0">
                            <!--<TextBlock
                                x:Name="SuggestionsText"
                                Grid.Row="0"
                                Text="Weather Insights"
                                Style="{StaticResource BodyTextBlockStyle}"
                                FontSize="20"
                                Margin="0,0,0,16" />-->


                        </RelativePanel>


                        <StackPanel
                            Grid.Row="1"
                            Orientation="Horizontal">


                            <Grid x:Name="testGrid"
                                  Margin="4"
                                  CornerRadius="6"
                                  Padding="0"
                                  BorderThickness="2"
                                  BorderBrush="{ThemeResource MyAcrylicBrush}"
                                  Background="{ThemeResource MyAcrylicBrush}"
                                  Width="293">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <RelativePanel Grid.Row="0">

                                    <TextBlock x:Name="ChipTitle" Text="Day Summary"
                                               Style="{StaticResource BodyStrongTextBlockStyle}"
                                               Margin="8,8,0,0"
                                               FontSize="16"
                                               Foreground="{ThemeResource MyAcrylicBrushTitleText}"
                                               RelativePanel.AlignTopWithPanel="True"
                                    />

                                    <!-- horizontal line -->
                                    <Rectangle x:Name="Rectangle2"
                                               Fill="{ThemeResource MyAcrylicBrushLine}"
                                               Height="1.2"
                                               RelativePanel.Below="ChipTitle"
                                               Width="288"
                                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                                               Margin="0,6,0,0" />
                                </RelativePanel>

                                <RelativePanel Grid.Row="1"
                                               Margin="8">

                                    <TextBlock x:Name="DayTitle" Text="Day"
                                               Style="{StaticResource BodyStrongTextBlockStyle}"
                                               Margin="0,0,0,0"
                                               Opacity="0.6"
                                               RelativePanel.AlignTopWithPanel="True"/>

                                    <TextBlock x:Name="DaySummaryText" Text="hellox"
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               Margin="0,6,0,0"
                                               RelativePanel.Below="DayTitle"/>

                                    <TextBlock x:Name="NightTitle" Text="Night"
                                               Style="{StaticResource BodyStrongTextBlockStyle}"
                                               Margin="0,6,0,0"
                                               Opacity="0.6"
                                               RelativePanel.Below="DaySummaryText" />

                                    <TextBlock x:Name="NightSummaryText" Text="hello"
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               Margin="0,6,0,0"
                                               RelativePanel.Below="NightTitle"/>


                                </RelativePanel>


                            </Grid>

                        </StackPanel>

                    </Grid>


                </Grid>
            </ScrollViewer>


        </Grid>


    </Grid>


</Page>
